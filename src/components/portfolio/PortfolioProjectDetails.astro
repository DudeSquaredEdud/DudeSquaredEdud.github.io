---
// PortfolioProjectDetails.astro - Detailed project section component

interface Props {
  id: string;
  title: string;
  lead: string;
  content: string;
}

const { id, title, lead, content } = Astro.props;
---

<section id={id} class="section">
  <h2>{title}</h2>
  <p class="lead">{lead}</p>
  <div set:html={content} />
</section>