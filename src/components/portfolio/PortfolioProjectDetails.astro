---
// PortfolioProjectDetails.astro - Detailed project section component

interface Props {
  id: string;
  title: string;
  lead: string;
  content: any; // Astro component
}

const { id, title, lead, content: Content } = Astro.props;
---

<section id={id} class="section">
  <h2>{title}</h2>
  <p class="lead">{lead}</p>
  <Content />
</section>