---
// PortfolioBio.astro - Bio section component

interface Props {
  bioContent: string;
}

const { bioContent } = Astro.props;
---

<section id="bio" class="section">
  <h2>About Me</h2>

  <div class="bio-grid">
    <div class="bio-text">
      <div class="lead" set:html={bioContent} />
    </div>

    <div class="bio-image-section">
      <div class="image-placeholder">
        <p>Educational Journey</p>
        <span>Timeline or infographic showing education path</span>
      </div>
    </div>
  </div>
</section>