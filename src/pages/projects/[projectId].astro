---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projectDetails = await getCollection('projectDetails');
  return projectDetails.map((project) => ({
    params: { projectId: project.data.projectId },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout 
  title={`${project.data.title} - Ashton Andrepont`}
  description={project.data.lead}
>
  <section class="section">
    <div class="project-header">
      <h2>{project.data.title}</h2>
      <p class="project-lead">{project.data.lead}</p>
    </div>
    
    <div class="project-content markdown-content">
      <Content />
    </div>
    
    <div class="navigation-links">
      <a href="/projects" class="back-link">‚Üê Back to Projects</a>
    </div>
  </section>
</Layout>

<style>
  .project-header {
    margin-bottom: 2rem;
    border-bottom: 2px solid var(--color-border);
    padding-bottom: 1.5rem;
  }

  .project-header h2 {
    margin: 0 0 0.75rem 0;
    color: var(--color-text);
    font-size: 2.25rem;
    font-weight: 600;
  }

  .project-lead {
    color: var(--color-accent);
    font-weight: 500;
    font-size: 1.25rem;
    margin: 0;
  }

  .project-content {
    margin-bottom: 3rem;
    line-height: 1.7;
  }

  .navigation-links {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .back-link {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-text);
    text-decoration: underline;
  }
</style>
