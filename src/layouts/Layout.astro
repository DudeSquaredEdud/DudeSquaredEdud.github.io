---
interface Props {
	title: string;
	description?: string;
}

const { title, description = "Ashton Andrepont - Computer Science Research" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Academic Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
		
		<style is:global>
			:root {
				--color-text: #1a1a1a;
				--color-text-light: #4a5568;
				--color-accent: #2563eb;
				--color-border: #e2e8f0;
				--color-bg: #ffffff;
				--color-bg-subtle: #f8fafc;
				--font-body: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
				--font-mono: 'JetBrains Mono', Monaco, Consolas, monospace;
			}

			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				font-family: var(--font-body);
				line-height: 1.6;
				color: var(--color-text);
				background: var(--color-bg);
				font-size: 16px;
			}

			.container {
				max-width: 800px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			header {
				border-bottom: 1px solid var(--color-border);
				padding: 2rem 0;
				margin-bottom: 3rem;
			}

			nav {
				display: flex;
				gap: 2rem;
				margin-top: 1rem;
			}

			nav a {
				color: var(--color-text-light);
				text-decoration: none;
				font-weight: 400;
				transition: color 0.2s ease;
			}

			nav a:hover,
			nav a.active {
				color: var(--color-accent);
			}

			h1, h2, h3, h4 {
				font-weight: 600;
				line-height: 1.3;
				margin-bottom: 1rem;
			}

			h1 {
				font-size: 2.5rem;
				margin-bottom: 0.5rem;
			}

			h2 {
				font-size: 1.875rem;
				margin-top: 2rem;
			}

			h3 {
				font-size: 1.375rem;
				margin-top: 1.5rem;
			}

			p {
				margin-bottom: 1rem;
				color: var(--color-text-light);
			}

			.lead {
				font-size: 1.125rem;
				font-weight: 400;
				color: var(--color-text);
				margin-bottom: 2rem;
			}

			.section {
				margin-bottom: 3rem;
			}

			.research-item,
			.project-item {
				border: 1px solid var(--color-border);
				border-radius: 8px;
				padding: 1.5rem;
				margin-bottom: 1.5rem;
				background: var(--color-bg-subtle);
			}

			.research-item h3,
			.project-item h3 {
				margin-top: 0;
				color: var(--color-text);
			}

			.tags {
				margin-top: 1rem;
				line-height: 2;
			}

			.tag {
				background: var(--color-accent) !important;
				color: white !important;
				padding: 0.375rem 0.875rem !important;
				border-radius: 6px !important;
				font-size: 0.875rem !important;
				font-weight: 500 !important;
				border: none !important;
				display: inline-block !important;
				margin-right: 0.5rem !important;
				margin-bottom: 0.5rem !important;
				transition: background-color 0.2s ease;
				white-space: nowrap !important;
			}

			.tag:hover {
				background: #1d4ed8;
			}

			.contact-info {
				background: var(--color-bg-subtle);
				border: 1px solid var(--color-border);
				border-radius: 8px;
				padding: 1.5rem;
				margin-bottom: 2rem;
			}

			.contact-info a {
				color: var(--color-accent);
				text-decoration: none;
			}

			.contact-info a:hover {
				text-decoration: underline;
			}

			footer {
				border-top: 1px solid var(--color-border);
				padding: 2rem 0;
				margin-top: 4rem;
				text-align: center;
				color: var(--color-text-light);
			}

			/* Markdown Content Styling */
			.markdown-content {
				max-width: none;
			}

			.markdown-content h1 {
				font-size: 2rem;
				margin: 2rem 0 1rem 0;
				color: var(--color-text);
				border-bottom: 2px solid var(--color-border);
				padding-bottom: 0.5rem;
			}

			.markdown-content h2 {
				font-size: 1.5rem;
				margin: 2rem 0 1rem 0;
				color: var(--color-text);
			}

			.markdown-content h3 {
				font-size: 1.25rem;
				margin: 1.5rem 0 0.5rem 0;
				color: var(--color-text);
			}

			.markdown-content p {
				margin-bottom: 1rem;
				line-height: 1.7;
			}

			.markdown-content strong {
				font-weight: 600;
				color: var(--color-accent);
			}

			.markdown-content a {
				color: var(--color-accent);
				text-decoration: none;
			}

			.markdown-content a:hover {
				text-decoration: underline;
			}

			/* Style markdown content to match existing design */
			.markdown-content > h1:first-child {
				margin-top: 0;
			}

			@media (max-width: 768px) {
				.container {
					padding: 0 1rem;
				}
				
				h1 {
					font-size: 2rem;
				}
				
				nav {
					flex-direction: column;
					gap: 1rem;
				}
			}
		</style>
	</head>
	<body>
		<div class="container">
			<header>
				<h1>Ashton Andrepont</h1>
				<p class="lead">Educational Technology Research • Accessibility • Human-AI Collaboration</p>
				<nav>
					<a href="/">Home</a>
					<a href="/research">Research</a>
					<a href="/projects">Projects</a>
					<a href="/portfolio">Portfolio</a>
					<a href="/cv">CV</a>
					<a href="/timer">Timer</a>
					<a href="/random">Random</a>
				</nav>
			</header>
			
			<main>
				<slot />
			</main>
			
			<footer>
				<p>&copy; 2025 Ashton Andrepont. Built with <a href="https://astro.build">Astro</a>.</p>
			</footer>
		</div>
	</body>
</html>
